{
  "manifest_version": 3, 
  "name": "Ransomware Email Scanner FYP",
  "version": "1.0",
  "description": "Scans email content and attachments for ransomware and phishing threats.",
  "permissions": ["storage", "activeTab", "scripting", "https://*/*","http://*/*", "downloads", "cookies"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.office.com/*",
    "https://www.virustotal.com/*", "https://*/*", "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*", "https://outlook.office.com/*"],
      "js": ["utils.js","contentPopup.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/email-scanner-logo.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/loading-circle.gif", "icons/*"],
      "matches": ["https://mail.google.com/*", "https://outlook.office.com/*"]
    }
  ]
}
